{
  "$schema": "https://lingo.dev/schema/i18n.json",
  "version": 1.8,
  "locale": {
    "source": "en",
    "targets": ["fr", "es", "de"]
  },
  "buckets": {
    "mdx": {
      "include": [
        "content/docs/[locale]/*.mdx",
        "content/docs/[locale]/*/*.mdx",
        "content/docs/[locale]/*/*/*.mdx"
      ],
      "exclude": ["content/docs/[locale]/sdks/*.mdx"]
    }
  }
}
